<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="360dp"
    android:background="@android:color/transparent">
    <View
        android:id="@+id/music"
        android:layout_width="@dimen/float_ball_w"
        android:layout_height="@dimen/float_ball_h"
        android:background="@drawable/ic_music"
        android:layout_marginTop="30dp"
        android:layout_marginStart="128dp"
        />
    <View
        android:id="@+id/navigation"
        android:layout_width="@dimen/float_ball_w"
        android:layout_height="@dimen/float_ball_h"
        android:background="@drawable/ic_navigation"
        android:layout_marginTop="126dp"
        android:layout_marginStart="30dp"
        />
    <View
        android:id="@+id/phone"
        android:layout_width="@dimen/float_ball_w"
        android:layout_height="@dimen/float_ball_h"
        android:background="@drawable/ic_phone"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="22dp"
        
        />
    <View
        android:id="@+id/radio"
        android:layout_width="@dimen/float_ball_w"
        android:layout_height="@dimen/float_ball_h"
        android:background="@drawable/ic_radio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="22dp"
        />
    <com.huxq17.floatball.libarary.menu.FloatAnimationLayout
        android:id="@+id/float_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>